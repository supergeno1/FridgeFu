<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FridgeLanding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bot_nav_bar"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_title"
            android:textSize="30sp"
            android:gravity="center_horizontal">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/filter_icon"/>

            <EditText
                android:id="@+id/edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@android:string/search_go">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/recipes">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lasagna_info"
                android:drawableLeft="@drawable/lasagna_2"
                android:gravity="center|start"
                android:padding="15dp"
                android:layout_margin="7dp"
                android:background="@drawable/round_box">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:text="@string/pbj_text"
                android:drawableLeft="@drawable/pbj_jpeg"
                android:gravity="center|start"
                android:padding="15dp"
                android:layout_margin="7dp"
                android:background="@drawable/round_box">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:text="@string/grilled_cheese_text"
                android:drawableLeft="@drawable/grilled_cheese"
                android:gravity="center|start"
                android:padding="15dp"
                android:layout_margin="7dp"
                android:background="@drawable/round_box">
            </Button>
        </LinearLayout>

        <!--
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"         android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp" />
            -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bot_nav_bar">

        <ImageButton
            android:id="@+id/grocery_list"
            android:onClick="to_grocery_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/grocery_list"
            android:backgroundTint="#FFFFFF"
            android:scaleType="centerInside">

        </ImageButton>
        <ImageButton
            android:onClick="to_fridge"
            android:id="@+id/fridge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fridge"
            android:backgroundTint="#FFFFFF"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter">

        </ImageButton>
        <ImageButton
            android:onClick="to_recipe_book"
            android:id="@+id/recipe_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/recipe_book"
            android:backgroundTint="#C0E9EA"
            android:scaleType="fitCenter"
            android:padding="0dp">
        </ImageButton>
        <ImageButton
            android:onClick="to_setting"
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:backgroundTint="#FFFFFF"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter">
        </ImageButton>
    </LinearLayout>



</RelativeLayout>