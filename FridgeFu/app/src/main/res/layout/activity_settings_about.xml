<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bot_nav_bar"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:background="@drawable/customborder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="FridgeFu created for CS 465 in Fall 2019 by:"
            android:id="@+id/tv1"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="arshrc2"
            android:id="@+id/tv2"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="ivartic2"
            android:id="@+id/tv3"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="mps5"
            android:id="@+id/tv4"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="renukan2"
            android:id="@+id/tv5"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="uawasth2"
            android:id="@+id/tv6"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="vsriram2"
            android:id="@+id/tv7"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/bot_nav_bar">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/grocery_list"
                android:backgroundTint="#FFFFFF"
                android:scaleType="centerInside"
                android:id="@+id/grocery_list">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fridge"
                android:backgroundTint="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:id="@+id/fridge_menu">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/recipe_book"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:id="@+id/recipe_book">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/settings"
                android:backgroundTint="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter">
            </ImageButton>
        </LinearLayout>
</RelativeLayout>
