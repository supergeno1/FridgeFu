<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceryLanding">
    <RelativeLayout
        android:id="@+id/grocery_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/bot_nav_bar"
            android:orientation="vertical"
            android:background="@drawable/customborder">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="12">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:text="Grocery List"
                    android:textSize="30sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <ExpandableListView
                    android:id="@+id/expandableListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="-140dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add bought to fridge"
                    android:id="@+id/add_all"
                    >

                </Button>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/bot_nav_bar">

            <ImageButton
                android:id="@+id/grocery_list"
                android:onClick="to_grocery_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/grocery_list"
                android:backgroundTint="#d81b60"
                android:scaleType="centerInside">

            </ImageButton>
            <ImageButton
                android:onClick="to_fridge"
                android:id="@+id/fridge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fridge"
                android:backgroundTint="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter">

            </ImageButton>
            <ImageButton
                android:onClick="to_recipe_book"
                android:id="@+id/recipe_book"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/recipe_book"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:padding="0dp">

            </ImageButton>
            <ImageButton
                android:onClick="to_setting"
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/settings"
                android:backgroundTint="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter">
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/plus"
        app:layout_anchor="@id/expandableListView"
        app:layout_anchorGravity="bottom|right|end"
        android:id="@+id/FAB"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
